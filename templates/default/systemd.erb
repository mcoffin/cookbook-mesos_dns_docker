[Unit]
Description='Mesos DNS Service'
After=docker.service
Requires=docker.service

[Service]
TimeoutStartSec=0
ExecStartPre=-/usr/bin/docker kill mesos-dns
ExecStartPre=-/usr/bin/docker rm mesos-dns
ExecStartPre=/usr/bin/docker pull <%= @image %>
ExecStart=/usr/bin/docker run --name mesos-dns -p 53:8053/udp -p 53:8053/tcp -v /etc/mesos-dns-config.json:/config.json <%= @image %> /mesos-dns -config=config.json
ExecStop=/usr/bin/docker stop mesos-dns
